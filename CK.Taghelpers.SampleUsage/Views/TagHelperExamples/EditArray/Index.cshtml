@model EditArrayIndexViewModel

@{
    ViewData["Title"] = "EditArray TagHelper Examples";
}

<div class="example-page">
    <h1>@ViewData["Title"]</h1>
    <p class="page-description">
        EditArrayTagHelper renders editable collections with display mode, template-based add, delete
        markers, and optional reorder controls. Each group below focuses on a specific usage area.
    </p>

    <section class="mb-4">
        <h2 class="h4">Prerequisites</h2>
        <ul class="list-unstyled">
            <li><strong>TagHelper registration:</strong> Ensure CK.Taghelpers is registered in the local _ViewImports.</li>
            <li><strong>Scripts:</strong> editArray.js must be loaded (already included in the site layout).</li>
            <li><strong>Display templates:</strong> Provide both edit and display partials.</li>
        </ul>
        <pre><code class="language-cshtml">@Html.Raw("&lt;!-- Views/_ViewImports.cshtml --&gt;\n@addTagHelper *, CK.Taghelpers\n")</code></pre>
    </section>

    <div class="row g-3">
        @foreach (var group in Model.Groups)
        {
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-body">
                        <h3 class="h5">@group.Title</h3>
                        <p class="mb-2">@group.Description</p>
                        <p class="text-muted mb-3">@group.ExampleCount example(s)</p>
                        <a class="btn btn-outline-primary"
                           asp-controller="TagHelperExamples"
                           asp-action="@group.ActionName"
                           asp-fragment="@group.AnchorId">View examples</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
