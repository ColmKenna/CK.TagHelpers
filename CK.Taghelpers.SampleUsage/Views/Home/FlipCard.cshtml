            <!-- API Reference -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-book text-warning"></i> API Reference
                </h2>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><code>&lt;flip-card&gt;</code> TagHelper</h5>
                    </div>
                    <div class="card-body">
                        <p>Container element that renders the 3D flip card.</p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Attribute</th>
                                    <th>Type</th>
                                    <th>Default</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><code>flip-direction</code></td>
                                    <td>FlipDirection</td>
                                    <td><code>Horizontal</code></td>
                                    <td>Direction of the flip animation. <code>Horizontal</code> or <code>Vertical</code>.</td>
                                </tr>
                                <tr>
                                    <td><code>auto-height</code></td>
                                    <td>bool?</td>
                                    <td><code>false</code></td>
                                    <td>When <code>true</code>, card height adjusts to fit the tallest face.</td>
                                </tr>
                                <tr>
                                    <td><code>button-text</code></td>
                                    <td>string</td>
                                    <td><code>"Flip"</code></td>
                                    <td>Default text for both flip buttons.</td>
                                </tr>
                                <tr>
                                    <td><code>front-button-text</code></td>
                                    <td>string?</td>
                                    <td><em>null</em></td>
                                    <td>Override button text on the front face. Falls back to <code>button-text</code>.</td>
                                </tr>
                                <tr>
                                    <td><code>back-button-text</code></td>
                                    <td>string?</td>
                                    <td><em>null</em></td>
                                    <td>Override button text on the back face. Falls back to <code>button-text</code>.</td>
                                </tr>
                                <tr>
                                    <td><code>button-class</code></td>
                                    <td>string?</td>
                                    <td><em>null</em></td>
                                    <td>Additional CSS classes for flip buttons.</td>
                                </tr>
                                <tr>
                                    <td><code>show-buttons</code></td>
                                    <td>bool</td>
                                    <td><code>true</code></td>
                                    <td>When <code>false</code>, hides the built-in flip buttons.</td>
                                </tr>
                                <tr>
                                    <td><code>class</code></td>
                                    <td>string?</td>
                                    <td><em>null</em></td>
                                    <td>Additional CSS classes for the card container.</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

