@{
    ViewData["Title"] = "CK.TagHelpers - Sample Usage";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="display-3 mb-3">CK.TagHelpers</h1>
                <p class="lead text-muted">
                    A collection of powerful ASP.NET Core TagHelpers to simplify common web development tasks
                </p>
            </div>

            <div class="alert alert-info mb-5">
                <h5 class="alert-heading">
                    <i class="bi bi-info-circle"></i> About This Sample Project
                </h5>
                <p class="mb-0">
                    This sample project demonstrates the usage of various TagHelpers from the CK.TagHelpers library.
                    Each TagHelper has its own dedicated page with live examples, documentation, and code samples.
                </p>
            </div>

            <h2 class="mb-4">Available TagHelpers</h2>

            <div class="row g-4 mb-5">
                <div class="col-lg-12">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; font-size: 24px;">
                                        <i class="bi bi-list-ul"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-4">
                                    <h3 class="h4 mb-2">EditArray TagHelper</h3>
                                    <p class="text-muted mb-3">
                                        Manage dynamic lists with display/edit modes, add/delete operations, reordering, and JavaScript callbacks.
                                        Perfect for building inline list editors, team member management, task lists, and more.
                                    </p>
                                    <div class="mb-3">
                                        <span class="badge bg-primary me-2">Display/Edit Toggle</span>
                                        <span class="badge bg-primary me-2">Add/Remove Items</span>
                                        <span class="badge bg-primary me-2">Reordering</span>
                                        <span class="badge bg-primary me-2">Soft Delete</span>
                                        <span class="badge bg-primary me-2">JS Callbacks</span>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a asp-action="EditArray" class="btn btn-primary">
                                            <i class="bi bi-info-circle"></i> Learn More
                                        </a>
                                        <a asp-action="Samples" class="btn btn-outline-primary">
                                            <i class="bi bi-code-square"></i> View Examples
                                        </a>
                                        <a asp-action="Documentation" class="btn btn-outline-secondary">
                                            <i class="bi bi-book"></i> Documentation
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tab TagHelper -->
                <div class="col-lg-12">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; font-size: 24px;">
                                        <i class="bi bi-folder2-open"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-4">
                                    <h3 class="h4 mb-2">Tab TagHelper</h3>
                                    <p class="text-muted mb-3">
                                        Create accessible, CSS-only tabbed interfaces with minimal markup.
                                        Perfect for organizing content, settings panels, and multi-step forms.
                                    </p>
                                    <div class="mb-3">
                                        <span class="badge bg-success me-2">CSS-Only</span>
                                        <span class="badge bg-success me-2">Accessible</span>
                                        <span class="badge bg-success me-2">Responsive</span>
                                        <span class="badge bg-success me-2">Auto ID</span>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Tabs" class="btn btn-success">
                                            <i class="bi bi-info-circle"></i> Learn More
                                        </a>
                                        <a asp-action="Tabs" class="btn btn-outline-success">
                                            <i class="bi bi-code-square"></i> View Examples
                                        </a>
                                        <a asp-action="Documentation" class="btn btn-outline-secondary">
                                            <i class="bi bi-book"></i> Documentation
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Placeholder for future TagHelpers -->
                <div class="col-lg-12">
                    <div class="card border-dashed bg-light">
                        <div class="card-body p-4 text-center text-muted">
                            <i class="bi bi-plus-circle" style="font-size: 48px;"></i>
                            <p class="mb-0 mt-3">More TagHelpers coming soon...</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-github"></i> Installation
                            </h5>
                            <p class="card-text small mb-3">
                                Install the CK.TagHelpers NuGet package in your ASP.NET Core project:
                            </p>
                            <pre class="bg-white p-2 rounded border"><code>dotnet add package CK.TagHelpers</code></pre>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-gear"></i> Setup
                            </h5>
                            <p class="card-text small mb-3">
                                Register TagHelpers in your <code>_ViewImports.cshtml</code>:
                            </p>
                            <pre class="bg-white p-2 rounded border"><code>@@addTagHelper *, CK.Taghelpers</code></pre>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightbulb"></i> Quick Tip
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        Each TagHelper in this library comes with comprehensive documentation, working examples,
                        and troubleshooting guides. Click "Learn More" on any TagHelper above to get started.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-dashed {
        border: 2px dashed #dee2e6 !important;
    }
</style>
