@{
    ViewData["Title"] = "Tab TagHelper Examples";
}

@section Styles {
    <link rel="stylesheet" href="~/_content/CK.Taghelpers/css/tabs.css" asp-append-version="true" />
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Tab TagHelper</li>
                </ol>
            </nav>

            <h1 class="display-4 mb-3">Tab TagHelper</h1>
            <p class="lead text-muted mb-5">
                Create accessible, CSS-only tabs with minimal markup using the <code>&lt;tab&gt;</code> and <code>&lt;tab-item&gt;</code> TagHelpers.
            </p>

            <!-- Basic Example -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-1-circle text-primary"></i> Basic Example
                </h2>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <tab>
                            <tab-item heading="Overview">
                                <h4>Welcome to the Overview</h4>
                                <p>This is the first tab panel. The Tab TagHelper provides an easy way to create tabbed interfaces 
                                without writing complex HTML or JavaScript.</p>
                                <p>Key features:</p>
                                <ul>
                                    <li>CSS-only implementation (no JavaScript required)</li>
                                    <li>Accessible by default</li>
                                    <li>Responsive design</li>
                                    <li>Customizable styling</li>
                                </ul>
                            </tab-item>
                            <tab-item heading="Features">
                                <h4>Features</h4>
                                <p>The Tab TagHelper includes the following features:</p>
                                <dl>
                                    <dt>Automatic ID Generation</dt>
                                    <dd>Tab IDs are automatically generated from the heading text if not provided.</dd>
                                    
                                    <dt>First Tab Auto-Selected</dt>
                                    <dd>If no tab is marked as selected, the first tab is automatically selected.</dd>
                                    
                                    <dt>Custom Selection</dt>
                                    <dd>Use the <code>selected</code> attribute to pre-select a specific tab.</dd>
                                </dl>
                            </tab-item>
                            <tab-item heading="Usage">
                                <h4>How to Use</h4>
                                <pre class="bg-light p-3 rounded"><code>&lt;tab&gt;
    &lt;tab-item heading="Tab 1"&gt;
        Content for Tab 1
    &lt;/tab-item&gt;
    &lt;tab-item heading="Tab 2"&gt;
        Content for Tab 2
    &lt;/tab-item&gt;
&lt;/tab&gt;</code></pre>
                            </tab-item>
                        </tab>
                    </div>
                </div>
            </section>

            <!-- Pre-Selected Tab -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-2-circle text-primary"></i> Pre-Selected Tab
                </h2>
                <p class="text-muted mb-3">Use the <code>selected</code> attribute to specify which tab should be active by default.</p>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <tab>
                            <tab-item heading="First">
                                <p>This is the first tab, but it's not selected by default.</p>
                            </tab-item>
                            <tab-item heading="Second" selected="true">
                                <p><strong>This tab is pre-selected!</strong></p>
                                <p>Use <code>selected="true"</code> on the tab-item to make it the default active tab.</p>
                            </tab-item>
                            <tab-item heading="Third">
                                <p>This is the third tab.</p>
                            </tab-item>
                        </tab>
                    </div>
                </div>
                <div class="mt-3">
                    <h5>Code</h5>
                    <pre class="bg-light p-3 rounded"><code>&lt;tab&gt;
    &lt;tab-item heading="First"&gt;Content&lt;/tab-item&gt;
    &lt;tab-item heading="Second" <strong>selected="true"</strong>&gt;Selected content&lt;/tab-item&gt;
    &lt;tab-item heading="Third"&gt;Content&lt;/tab-item&gt;
&lt;/tab&gt;</code></pre>
                </div>
            </section>

            <!-- Custom IDs -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-3-circle text-primary"></i> Custom Tab IDs
                </h2>
                <p class="text-muted mb-3">Provide custom IDs for tabs when you need to reference them programmatically.</p>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <tab>
                            <tab-item id="custom-home-tab" heading="Home">
                                <h4>Home Tab</h4>
                                <p>This tab has a custom ID: <code>custom-home-tab</code></p>
                            </tab-item>
                            <tab-item id="custom-profile-tab" heading="Profile">
                                <h4>Profile Tab</h4>
                                <p>This tab has a custom ID: <code>custom-profile-tab</code></p>
                            </tab-item>
                            <tab-item id="custom-settings-tab" heading="Settings">
                                <h4>Settings Tab</h4>
                                <p>This tab has a custom ID: <code>custom-settings-tab</code></p>
                            </tab-item>
                        </tab>
                    </div>
                </div>
                <div class="mt-3">
                    <h5>Code</h5>
                    <pre class="bg-light p-3 rounded"><code>&lt;tab&gt;
    &lt;tab-item <strong>id="custom-home-tab"</strong> heading="Home"&gt;...&lt;/tab-item&gt;
    &lt;tab-item <strong>id="custom-profile-tab"</strong> heading="Profile"&gt;...&lt;/tab-item&gt;
    &lt;tab-item <strong>id="custom-settings-tab"</strong> heading="Settings"&gt;...&lt;/tab-item&gt;
&lt;/tab&gt;</code></pre>
                </div>
            </section>

            <!-- Rich Content -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-4-circle text-primary"></i> Rich Content Example
                </h2>
                <p class="text-muted mb-3">Tabs can contain any HTML content including forms, images, tables, and more.</p>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <tab>
                            <tab-item heading="Contact Form">
                                <h4>Contact Us</h4>
                                <form>
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" placeholder="Enter your name">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" placeholder="Enter your email">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Message</label>
                                        <textarea class="form-control" rows="3" placeholder="Your message"></textarea>
                                    </div>
                                    <button type="button" class="btn btn-primary">Submit</button>
                                </form>
                            </tab-item>
                            <tab-item heading="Data Table">
                                <h4>Sample Data</h4>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>John Doe</td>
                                            <td>john@example.com</td>
                                            <td><span class="badge bg-success">Active</span></td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>Jane Smith</td>
                                            <td>jane@example.com</td>
                                            <td><span class="badge bg-success">Active</span></td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td>Bob Johnson</td>
                                            <td>bob@example.com</td>
                                            <td><span class="badge bg-warning">Pending</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </tab-item>
                            <tab-item heading="Statistics">
                                <h4>Quick Stats</h4>
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <div class="p-3 bg-primary text-white rounded mb-3">
                                            <h2 class="mb-0">1,234</h2>
                                            <small>Total Users</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-3 bg-success text-white rounded mb-3">
                                            <h2 class="mb-0">567</h2>
                                            <small>Active Sessions</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-3 bg-info text-white rounded mb-3">
                                            <h2 class="mb-0">89%</h2>
                                            <small>Satisfaction Rate</small>
                                        </div>
                                    </div>
                                </div>
                            </tab-item>
                        </tab>
                    </div>
                </div>
            </section>

            <!-- API Reference -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-book text-primary"></i> API Reference
                </h2>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><code>&lt;tab&gt;</code> TagHelper</h5>
                    </div>
                    <div class="card-body">
                        <p>Container element for tab items. Renders as a <code>&lt;div class="tabs"&gt;</code>.</p>
                        <p class="text-muted">No additional attributes required.</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><code>&lt;tab-item&gt;</code> TagHelper</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Attribute</th>
                                    <th>Type</th>
                                    <th>Default</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><code>heading</code></td>
                                    <td>string</td>
                                    <td><em>required</em></td>
                                    <td>The text displayed on the tab button.</td>
                                </tr>
                                <tr>
                                    <td><code>id</code></td>
                                    <td>string</td>
                                    <td><em>auto-generated</em></td>
                                    <td>Unique identifier for the tab. If not provided, an ID is generated from the heading.</td>
                                </tr>
                                <tr>
                                    <td><code>selected</code></td>
                                    <td>bool</td>
                                    <td><code>false</code></td>
                                    <td>When <code>true</code>, this tab will be active by default.</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- Back to Home -->
            <div class="text-center mt-5">
                <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
