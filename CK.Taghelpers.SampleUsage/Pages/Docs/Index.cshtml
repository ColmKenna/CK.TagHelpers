@page "/docs"
@model DocsIndexModel
@{
    ViewData["Title"] = "TagHelper Reference Documentation";
}

<div class="docs-container">
    <div class="docs-header">
        <h1>TagHelper Reference Documentation</h1>
        <p class="subtitle">
            Professional API reference and usage guides for CK.Taghelpers components. 
            Select a component below to view detailed documentation, attribute references, 
            configuration guidance, and JavaScript API documentation.
        </p>
    </div>

    <div class="docs-section">
        <h2>Form Controls</h2>
        <div class="docs-grid">
            <div class="docs-card">
                <h3><a href="/docs/editarray">EditArray</a></h3>
                <div class="tag-element">
                    <code>&lt;edit-array&gt;</code>
                </div>
                <p class="description">
                    Dynamically render, edit, and manage collections with add, delete, reorder, 
                    and validation capabilities. Supports display/edit mode toggling and inline 
                    item deletion with undo.
                </p>
                <a href="/docs/editarray">View Documentation →</a>
            </div>

            <div class="docs-card">
                <h3><a href="/docs/tabs">Tabs</a></h3>
                <div class="tag-element">
                    <code>&lt;tab&gt;</code> / <code>&lt;tab-item&gt;</code>
                </div>
                <p class="description">
                    A CSS-only tabbed interface component with no JavaScript dependencies. 
                    Features automatic tab selection, ARIA accessibility attributes, 
                    and responsive behavior.
                </p>
                <a href="/docs/tabs">View Documentation →</a>
            </div>
        </div>
    </div>

    <div class="docs-section">
        <h2>Visual Components</h2>
        <div class="docs-grid">
            <div class="docs-card">
                <h3><a href="/docs/flipcard">FlipCard</a></h3>
                <div class="tag-element">
                    <code>&lt;flip-card&gt;</code> / <code>&lt;card-front&gt;</code> / <code>&lt;card-back&gt;</code>
                </div>
                <p class="description">
                    A 3D card component that flips between front and back content using CSS transforms. 
                    Customizable flip direction, button text, and styling. Includes ARIA accessibility attributes.
                </p>
                <a href="/docs/flipcard">View Documentation →</a>
            </div>
        </div>
    </div>

    <div class="docs-section">
        <h2>Documentation Format</h2>
        <p>
            Each TagHelper documentation page includes:
        </p>
        <ul>
            <li><strong>Overview:</strong> What the component does and when to use it</li>
            <li><strong>Getting Started:</strong> A minimal, working example</li>
            <li><strong>Attribute Reference:</strong> A complete table of all TagHelper properties</li>
            <li><strong>Configuration Guidance:</strong> Common usage patterns and code examples</li>
            <li><strong>JavaScript API Reference:</strong> Methods, events, and CSS custom properties (where applicable)</li>
            <li><strong>Notes and Limitations:</strong> Important caveats and browser compatibility</li>
        </ul>
    </div>

    <div class="docs-section">
        <h2>Quick Links</h2>
        <ul>
            <li><a href="/docs/editarray">EditArray Reference</a></li>
            <li><a href="/docs/tabs">Tabs Reference</a></li>
            <li><a href="/docs/flipcard">FlipCard Reference</a></li>
        </ul>
    </div>
</div>

<style>
    @import url('_docs.css');
</style>
